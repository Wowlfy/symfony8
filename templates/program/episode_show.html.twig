{% extends 'base.html.twig' %}

{% block title %}Episodes #{% endblock %}


{% block body %}


<div class="media">

  <div class="media-body">

    <h1 class="mt-0">{{ program.title }}</h1>

    <p>Saison n°{{ season.number }} et année de sortie: {{ season.year }}</p>

    <p>Description : {{ season.description }}</p>

  </div>

  <div>

    <p> Numéro et titre de l'épisode: {{ episode.number }} : {{ episode.title }} </p>

    <p> Synopsis: {{ episode.synopsis }} </p>

  </div>

</div>


<a href="{{ path('program_index') }}">

    Retour à la liste des programmes

</a>


{% endblock %}